html
  head
    link(rel="icon" type="image/x-icon" href="/images/favicon.svg")
    link(rel="stylesheet" type="text/css" href="/css/style.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans" rel="stylesheet")
    script(src="https://kit.fontawesome.com/c837cd83e3.js" crossorigin="anonymous")
    title= author.name + " " + author.surname
  body
    nav
      h1= "Книжная библиотека"
      ul    
        li
          a(href="/books")= "Книги"
        li 
          a(href="/authors")= "Авторы"
        li 
          a(href="/shelves")= "Полки"
        li 
          a(href="/users")= "Пользователи"
        li 
          a(href="/profile")= "Профиль"
    hr
    div.main
      header
        div.heading
          h2= author.name + " " + author.surname
        p 
          b
            | Годы жизни: 
          | #{author.birth_year}  —  #{author.death_year}
      div.content
        each val in books
          div.card
            div.card-header
              h2
                a(href="/books/" + val.id)= val.name
              p
                i.far.fa-star
                | 
                | 
                if val.rating_number != null
                  | #{val.rating}
                else
                  | N/A