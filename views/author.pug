html
  head
    link(rel="stylesheet" type="text/css" href="/css/style.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    script(src="https://kit.fontawesome.com/c837cd83e3.js" crossorigin="anonymous")
    title= author.name + " " + author.surname
  body
    nav
      h1= "Книжная библиотека"
        ul    
          li
            a(href="/books")= "Книги"
          li 
            a(href="/authors")= "Авторы"
          li 
            a(href="/shelves")= "Полки"
          li 
            a(href="/users")= "Пользователи"
          li 
            a(href="/profile")= "Профиль"
    hr
    div.main
      header
        div.heading
          h2= author.name + " " + author.surname
          h3 
            b
            |  Годы жизни: 
            = author.birth_year + " — " + author.death_year
      div.content
        each val in books
          div.card
            div.card-header
              h2
                a(href="/authors/" + val.book_id)= val.book_name
              p
                i.fas.fa-book
                | 
                | 
                if val.book_number != null
                  | #{val.book_number}
                else
                  | N/A