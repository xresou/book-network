<!DOCTYPE html>
html(lang="ru")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="/css/style.css" rel="stylesheet")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet")
    script(src="https://kit.fontawesome.com/c837cd83e3.js" crossorigin="anonymous")
    title= "Книги"
  body
    nav
      h1= "Книжная библиотека"
      ul    
        li
          a(href="/books")= "Книги"
        li 
          a(href="/authors")= "Авторы"
        li 
          a(href="/shelves")= "Полки"
        li 
          a(href="/users")= "Пользователи"
        li 
          a(href="/profile")= "Профиль"
    hr
    div.main
      header
        div.heading
          h1= "Книги"
        div.search
          form(action="" method="POST" id="form")
            input(type="text" name="search" placeholder="Поиск книг")
            input(type="submit" value="Поиск")
      div.content
        each val in values
          div.card
            div.card-header
              h2
                a(href="/books/" + val.book_id)= val.book_name
              p 
                i.far.fa-star
                |
                |
                if val.rating != null
                  | #{val.rating}
                else 
                  | N/A
            div.card-footer
              h3
                a(href="/authors/" + val.author_id)= val.author_name + " " + val.author_surname