<!DOCTYPE html>
html(lang="ru")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="/css/style.css" rel="stylesheet")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    script(src="https://kit.fontawesome.com/c837cd83e3.js" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono&display=swap" rel="stylesheet")
    title= "Полки"
  body
    nav
      h1= "Книжная библиотека"
      ul    
        li
          a(href="/books")= "Книги"
        li 
          a(href="/authors")= "Авторы"
        li 
          a(href="/shelves")= "Полки"
        li 
          a(href="/users")= "Пользователи"
        li 
          a(href="/profile")= "Профиль"
    hr
    div.main
      header
        div.heading
          h1= "Полки"
          a(href="/new_shelf")="Добавить полку"
        div.search
          form(action="" method="POST" id="form")
            input(type="text" name="search" placeholder="Поиск полок")
            input(type="submit" value="Поиск")
      div.content
        each val in shelves
          div.card
            div.card-header
              h2
                a(href="/books/" + val.id)= val.name
              p 
                i.fas.fa-book
                | 
                | #{val.book_number}
            div.card-footer        
              h3= val.description